<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/table_row_vert_pad" >

    <EditText
        android:id="@+id/playerNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/table_row_horiz_pad"
        android:ems="15"
        android:inputType="text" >
    </EditText>

    <Spinner
        android:id="@+id/playerTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/table_row_horiz_pad" />

    <FrameLayout android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/delPlayerButton"
            android:layout_width="@dimen/del_player_button_size"
            android:layout_height="@dimen/del_player_button_size"
            android:background="@android:color/transparent"
            android:contentDescription="@string/remove_player"
            android:scaleType="centerInside"
            android:src="@drawable/purple_delete_button" />
    </FrameLayout>

</TableRow>